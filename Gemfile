source 'http://rubygems.org'

gem 'rails'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

# HAML/SASS
gem 'haml'
gem 'compass'
gem 'html5-boilerplate'

# Markdown
gem 'rdiscount' 

# Access control
gem 'cancan'

# OAuth, FB connect, etc
gem 'devise'
gem 'omniauth'

# Semantic forms
gem 'formtastic'

# Better than instance vars
gem 'decent_exposure'

# Versioning
gem 'paper_trail'

# ActiveRecord search
gem "meta_where"
gem "meta_search"

group :cucumber do
    gem 'capybara'
    gem 'database_cleaner'
    gem 'cucumber-rails'
    gem 'cucumber'
    gem 'spork'
    gem 'launchy'
end

group :development, :test do
  gem 'webrat'
  gem 'sqlite3'
  
  gem 'rspec'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :production do
  gem 'mysql2'
end
